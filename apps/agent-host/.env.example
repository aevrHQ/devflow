# Server Configuration
PORT=3001
NODE_ENV=development

# Platform URLs
DEVFLOW_API_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Security & Secrets (⚠️ CHANGE THESE IN PRODUCTION)
JWT_SECRET=your-jwt-secret-min-32-chars-change-in-production
DEVFLOW_API_SECRET=your-devflow-api-secret-change-in-production
ACCESS_TOKEN_SECRET=your-access-token-secret-change-in-production

# Token Configuration (in seconds/duration)
ACCESS_TOKEN_EXPIRY=3h
JWT_EXPIRY=30d
MAGIC_LINK_EXPIRY_MS=900000
SESSION_EXPIRY_KEEP_SIGNED_IN=2592000
SESSION_EXPIRY_DEFAULT=86400

# AI & Copilot Configuration
COPILOT_MODEL=gpt-4.1
# Optional: Connect to external Copilot CLI server
# COPILOT_CLI_URL=localhost:4321

# GitHub Configuration
GITHUB_TOKEN=ghp_your-personal-access-token
GITHUB_APP_ID=gh_app_id
GITHUB_CLIENT_ID=gh_client_id
GITHUB_CLIENT_SECRET=gh_client_secret

# Groq API (Optional - for transcription)
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TRANSCRIPTION_MODEL=whisper-large-v3-turbo

# Database
MONGODB_URI=mongodb://localhost:27017/devflow

# Data Retention (in seconds for MongoDB TTL)
MAGIC_LINK_TTL_SECONDS=900
WEBHOOK_EVENT_TTL_DAYS=7
NOTIFICATION_LOG_TTL_DAYS=7
PAYLOAD_TTL_HOURS=24

# Polling & Heartbeat Intervals (in milliseconds)
POLL_INTERVAL_MS=5000
HEARTBEAT_INTERVAL_MS=30000

# Email Configuration (Optional)
MAIL_FROM=notifications@devflow.local
MAIL_SERVICE=gmail
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password

# Storage
REPO_STORAGE_PATH=/tmp/devflow-repos

# Logging
LOG_LEVEL=info
